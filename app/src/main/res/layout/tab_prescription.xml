<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toTopOf="parent"
    android:orientation="vertical"
    tools:context=".ui.main.PlaceholderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView14"
            android:layout_width="165dp"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Doctor's Remark :"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/remark1"
            app:layout_constraintEnd_toStartOf="@+id/remark"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/sendPrescription"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="244dp"
            android:layout_marginBottom="20dp"
            android:background="#1F6CF1"
            android:clickable="true"
            android:text="SAVE"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnPrint"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remark1" />

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="224dp"
            android:layout_height="42dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="18dp"
            android:background="#1F6CF1"
            android:clickable="true"
            android:text="Save and Print"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remark1" />

        <EditText
            android:id="@+id/remark1"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="96dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Doctor's Remark"
            android:inputType="textMultiLine"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/abc"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="left"
            android:hint="Name :"
            android:textColorHint="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintEnd_toStartOf="@+id/patientName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.847" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="46dp"
            android:layout_height="23dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="30dp"
            android:background="#fff"
            android:text="Age :"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/age"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.772" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginBottom="12dp"
            android:background="#fff"
            android:gravity="center"
            android:text="Height :"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toStartOf="@+id/height" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="12dp"
            android:background="#fff"
            android:gravity="center"
            android:text="Weight :"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toStartOf="@+id/weight"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/age"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="32dp"
            android:background="#fff"
            android:ems="10"
            android:gravity="center"
            android:hint="99"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.746" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="44dp"
            android:layout_height="23dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="BG :"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toStartOf="@+id/spn_bg" />

        <Spinner
            android:id="@+id/spn_bg"
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="Gender :"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/spn_gndr"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.873" />


        <Spinner
            android:id="@+id/spn_gndr"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/spn_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.871" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="38dp"
            android:layout_height="23dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="30dp"
            android:background="#fff"
            android:gravity="center"
            android:text="BP :"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/bp"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.772" />

        <EditText
            android:id="@+id/bp"
            android:layout_width="71dp"
            android:layout_height="23dp"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="29dp"
            android:background="#fff"
            android:ems="10"
            android:gravity="center"
            android:hint="999/999"
            android:inputType="date"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.794" />

        <EditText
            android:id="@+id/height"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="12dp"
            android:background="#fff"
            android:ems="10"
            android:gravity="center"
            android:hint="6.7"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toStartOf="@+id/textView5" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="12dp"
            android:background="#fff"
            android:ems="10"
            android:gravity="center"
            android:hint="50"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toStartOf="@+id/textView7" />

        <TextView
            android:id="@+id/date"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="#fff"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:hint="4 February, 2020"
            android:inputType="date"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.847" />

        <EditText
            android:id="@+id/patientName"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Pure Intention Software solution"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintEnd_toStartOf="@+id/date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.847" />

        <ImageView
            android:id="@+id/remark"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginEnd="8dp"

            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_mic"
            app:layout_constraintBottom_toTopOf="@+id/remark1"
            app:layout_constraintEnd_toStartOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="133dp"
            android:layout_height="29dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Speak Instead"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/remark1"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="100dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="100dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@+id/divider4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@+id/listMed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="89dp"
            android:layout_height="26dp"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="386dp"
            android:layout_marginBottom="38dp"
            android:gravity="center"
            android:text="Medicine"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider4"
            app:layout_constraintEnd_toStartOf="@+id/addMedi"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/addMedi"
            android:layout_width="83dp"
            android:layout_height="33dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="28dp"
            android:background="#1F6CF1"
            android:text="Add New"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider4"
            app:layout_constraintEnd_toEndOf="parent" />

        <ListView
            android:id="@+id/listMed"
            android:layout_width="591dp"
            android:layout_height="223dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/textView14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>